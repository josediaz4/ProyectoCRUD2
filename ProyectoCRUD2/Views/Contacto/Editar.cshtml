@model ProyectoCRUD2.Models.Contacto

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h4>Editar Contacto</h4>
            </div>
        </div>
        <div class="panel-body">
            <form action="@Url.Action("Editar","Contacto")" method="post">
                <input type="hidden" class="form-control" name="Nombre" value="@Html.DisplayTextFor(x=>x.IdContacto)" />
                <div class="form-group">
                    <label>Nombre</label>
                    <input type="text" class="form-control" name="Nombre" value="@Html.DisplayTextFor(x=>x.Nombre)" />
                </div>
                <div class="form-group">
                    <label>Apellido</label>
                    <input type="text" class="form-control" name="Apellido" value="@Html.DisplayTextFor(x=>x.Apellido)" />
                </div>
                <div class="form-group">
                    <label>Telefono</label>
                    <input type="number" class="form-control" name="Telefono" value="@Html.DisplayTextFor(x=>x.Telefono)" />
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" name="Email" value="@Html.DisplayTextFor(x=>x.Email)" />
                </div>

                <button type="submit" class="btn btn-primary">Editar</button>
                <a class="btn btn-warning" href="@Url.Action("Inicio","Contacto")">Volver</a>
            </form>
        </div>
    </div>
</div>

