@model List<ProyectoCRUD2.Models.Contacto>

@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h4>Lista de Contactos</h4>
            </div>
        </div>
        <div class="panel-body">
            <a class="btn btn-primary" style="margin-bottom:30px" href="@Url.Action("Nuevo","Contacto")">Nuevo contacto</a>
            
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead >
                        <tr>
                            <th scope="col">Nombre</th>
                            <th scope="col">Apellido</th>
                            <th scope="col">Telefono</th>
                            <th scope="col">Email</th>
                            <th style="width:150px"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (ProyectoCRUD2.Models.Contacto item in Model)
                        {
                        <tr>
                            <th>@item.Nombre</th>
                            <th>@item.Apellido</th>
                            <th>@item.Telefono</th>
                            <th>@item.Email</th>
                            <th>
                                <a class="btn btn-success btn-sm" href="@Url.Action("Editar","Contacto", new { idContacto = item.IdContacto})">Editar</a>
                                <a class="btn btn-danger btn-sm" href="#">Eliminar</a>
                            </th>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
